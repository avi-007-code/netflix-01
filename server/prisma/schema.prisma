generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?    
  email     String @unique  
  role      String
  pass      String
  createdAt DateTime @default(now())
}

model Genre {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  movies Movies[] // one genre can have many movies
}

model Movies {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  desc      String?
  year      Int
  url       String
  bannerUrl String?
  addedAt   DateTime @default(now())
  rating    Int      @default(0)

  // Relation
  genreId String @db.ObjectId
  genre   Genre  @relation(fields: [genreId], references: [id])
}

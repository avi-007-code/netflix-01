generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?    
  email     String @unique  
  role      String
  pass String 
  createdAt DateTime @default(now())
}

model Genre {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  movies Movies[] @relation("GenreMovies") // relation name
}

model Movies {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  addedAt DateTime @default(now())
  
  genreId String   @db.ObjectId
  genre   Genre    @relation("GenreMovies", fields: [genreId], references: [id])
}
